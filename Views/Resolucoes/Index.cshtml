@model IEnumerable<GestorContratos.Models.Resoluco>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataFim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pessoa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Portaria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataFim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pessoa.PessoaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Portaria.PortariaId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ResolucaoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ResolucaoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ResolucaoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
