@model GestorContratos.Models.Portaria

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Portaria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PortariaId" class="control-label"></label>
                <input asp-for="PortariaId" class="form-control" />
                <span asp-validation-for="PortariaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProtocoloDiof" class="control-label"></label>
                <input asp-for="ProtocoloDiof" class="form-control" />
                <span asp-validation-for="ProtocoloDiof" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnidadeGestora" class="control-label"></label>
                <input asp-for="UnidadeGestora" class="form-control" />
                <span asp-validation-for="UnidadeGestora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataPublicacao" class="control-label"></label>
                <input asp-for="DataPublicacao" class="form-control" />
                <span asp-validation-for="DataPublicacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContratoId" class="control-label"></label>
                <select asp-for="ContratoId" class ="form-control" asp-items="ViewBag.ContratoId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
            <a asp-action="Index" class="btn btn-primary" title="Voltar"><i class="fa-solid fa-share fa-rotate-180"></i></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
