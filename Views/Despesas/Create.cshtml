            <div class="form-group">
                <label asp-for="Elemento" class="control-label"></label>
                <input asp-for="Elemento" class="form-control" />
                <span asp-validation-for="Elemento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContratoId" class="control-label"></label>
                <select asp-for="ContratoId" class ="form-control" asp-items="ViewBag.ContratoId"></select>
