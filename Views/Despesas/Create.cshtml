            </div>
            <div class="form-group">
                <label asp-for="Programa" class="control-label"></label>
                <input asp-for="Programa" class="form-control" />
                <span asp-validation-for="Programa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Acao" class="control-label"></label>
                <input asp-for="Acao" class="form-control" />
                <span asp-validation-for="Acao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fonte" class="control-label"></label>
                <input asp-for="Fonte" class="form-control" />
                <span asp-validation-for="Fonte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Natureza" class="control-label"></label>
