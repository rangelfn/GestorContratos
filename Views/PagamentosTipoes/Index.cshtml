@model IEnumerable<GestorContratos.Models.PagamentosTipo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Modalidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCadastro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contrato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pagamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Modalidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCadastro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contrato.ContratoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pagamento.PagamentoId)
            </td>
            <td>
                <a asp-action="Edit"  class="btn btn-success" asp-route-id="@item.NotaEmpenho">Editar</a> |
                <a asp-action="Details" class="btn btn-info"  asp-route-id="@item.NotaEmpenho">Detalhar</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.NotaEmpenho">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
